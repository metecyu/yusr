    <build>
        <plugins>
         <plugin>
			    <groupId>org.apache.maven.plugins</groupId>
			    <artifactId>maven-surefire-plugin</artifactId>
			    <version>2.12</version>
			    <configuration>
			    	<argLine>-Dfile.encoding=UTF-8</argLine>
			        <forkMode>always</forkMode>
			    </configuration>
			</plugin>
        </plugins>
      </build>

