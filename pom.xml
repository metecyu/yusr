      <groupId>org.springframework</groupId>
      <artifactId>spring-context</artifactId>
      <version>3.1.0.RELEASE</version>
    </dependency>
    
    
    <!-- sping 3  orm 整合hibernate会用到[yzp]-->
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-orm</artifactId>
      <version>3.1.0.RELEASE</version>
    </dependency>
    <!-- sping 3  测试[yzp]-->
    <dependency>
      <groupId>org.springframework</groupId>
